$("#todos").append("<%= escape_javascript(render @todo)%>");
$("#new_todo")[0].reset();
todo_description.setContent("");

$("#<%= @todo.id %>").click(function() {
	// get todo item id
	var id = <%= @todo.id %>;
	var url = "/todos/update/" + id;
	var done = (this.checked) ? "true" : "false";
	$.post(url, { "todo[done]": done }, null, "script");
});
